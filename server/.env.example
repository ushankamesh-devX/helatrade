# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=helatrade

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
